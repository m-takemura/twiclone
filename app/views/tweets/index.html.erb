<p><%= notice %></p>

<%= form_for(@tweet, url: confirm_tweets_path) do |f| %>
    <%= f.label "本文" %>
    <br>
    <%= f.text_area :content, :maxlength => "255" %>
    <br>
    <%= f.submit %>
<% end %>

<% @tweets.each do |tweet| %>
    <!--<p><%= tweet.created_at.strftime("%Y-%m-%d %H:%M") %></p>-->
    <p><%= tweet.content %></p>
    <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
    <%= link_to '削除', tweet_path(tweet.id), method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>
<% end %>